<% layout("/layouts/boilerplate") -%>

<!-- Hero Section -->
<section class="text-center py-4">
  <div class="container">
    <h1 class="fw-bold">
      Your home could make <span class="text-danger">₹22,090</span> on WanderNest
    </h1>
    <p class="lead">7 nights· ₹3,156/night</p>

    <!-- Slider -->
    <div class="d-flex justify-content-center mt-3">
      <input type="range" class="form-range w-75 w-md-50" min="1" max="30" value="7">
    </div>

    <!-- Search Box -->
    <div class="search-box mt-3">
      <input type="text" class="form-control w-100 w-md-50 mx-auto rounded-5" placeholder="Enter your city">
    </div>
  </div>
</section>

<!-- Section 1: Map + Text -->
<section class="container">
  <div class="row g-5 justify-content-center">
    <div class="col-12 col-lg-6 d-flex justify-content-center">
      <img src="/images/map.png" 
           alt="Explore rates" 
           class="img-fluid rounded-4 tools-img shadow-lg" 
           >
    </div>
  </div>
</section>



<!-- Section 2: Tools Showcase -->
<section class="container text-center">
  <div class="row justify-content-center g-5 text-mob">

    <!-- Text -->
    <div class="col-12 col-lg-8">
      <h2 class="fw-bold mb-3">All the tools you need to host, all in one app</h2>
      <p class="text-muted fs-5">
        Manage bookings, set availability, and connect with guests — all inside WanderNest’s app, designed to simplify hosting.
      </p>
    </div>

    <!-- Image -->
    <div class="col-12 col-lg-8 d-flex justify-content-center">
      <img src="/images/mob.png" 
           alt="Host Tools" 
           class="img-fluid mobImg rounded-4 tools-img" 
           style="max-width:500px">
    </div>
  </div>
</section>


<!-- Section 3: Protection -->
<section class="text-center py-5">
  <div class="container">
    <h2 class="fw-bold">However you host, you’re protected</h2>
    <p class="lead">Top-to-bottom protection, included every time you host your home on WanderNest.</p>
    <ul class="list-unstyled mt-4 fs-5">
      <li>✔️ Up to ₹50L Damage Protection</li>
      <li>✔️ Liability Insurance Included</li>
      <li>✔️ 24/7 Safety Support</li>
    </ul>
    <a href="#" class="btn btn-dark mt-3">Learn More</a>
  </div>
</section>

<!-- Section 4: Hosting Steps -->
<section class="container text-center py-5">
  <h2 class="fw-bold mb-4">It’s easy to list your home on WanderNest</h2>
  <div class="row gy-4">
    <div class="col-12 col-md-4">
      <h5>Step 1</h5>
      <p>Tell us about your place</p>
    </div>
    <div class="col-12 col-md-4">
      <h5>Step 2</h5>
      <p>Set your availability</p>
    </div>
    <div class="col-12 col-md-4">
      <h5>Step 3</h5>
      <p>Welcome your guests</p>
    </div>
  </div>

   <div class="col-12 d-flex justify-content-center">
      <img src="/images/mob2.png" 
           alt="Host Tools" 
           class="img-fluid tools-img mt-3" 
           style="max-width: 600px;">
    </div>
</section>

<!-- Section: Why Host with WanderNest -->
<section class="container py-5">
  <h2 class="fw-bold text-center">Why host with <span class="text-danger">WanderNest?</span></h2>
  
  <div class="row g-4">
    <!-- Feature 1 -->
    <div class="col-md-4">
      <div class="card h-100 text-center shadow-sm border-0 rounded-4 p-4">
        <div class="mb-3">
          <img src="/images/lock.png" alt="Secure Hosting" width="60">
        </div>
        <h5 class="fw-semibold">Safe & Secure</h5>
        <p class="text-muted">
          With host protection, insurance, and support, your property is always in safe hands.
        </p>
      </div>
    </div>

    <!-- Feature 2 -->
    <div class="col-md-4">
      <div class="card h-100 text-center shadow-sm border-0 rounded-4 p-4">
        <div class="mb-3">
          <img src="/images/money-bag.png" alt="Earn Income" width="60">
        </div>
        <h5 class="fw-semibold">Extra Income</h5>
        <p class="text-muted">
          Turn your space into steady earnings by welcoming guests from around the world.
        </p>
      </div>
    </div>

    <!-- Feature 3 -->
    <div class="col-md-4">
      <div class="card h-100 text-center shadow-sm border-0 rounded-4 p-4">
        <div class="mb-3">
          <img src="/images/customer-support.png" alt="24/7 Support" width="60">
        </div>
        <h5 class="fw-semibold">24/7 Support</h5>
        <p class="text-muted">
          Our dedicated team is here to help you at every step, day or night.
        </p>
      </div>
    </div>

    <!-- Feature 4 -->
    <div class="col-md-6">
      <div class="card h-100 text-center shadow-sm border-0 rounded-4 p-4">
        <div class="mb-3">
          <img src="/images/globe-v1.png" alt="Global Guests" width="60">
        </div>
        <h5 class="fw-semibold">Global Guests</h5>
        <p class="text-muted">
          Connect with travelers from every corner of the world and share your culture.
        </p>
      </div>
    </div>

    <!-- Feature 5 -->
    <div class="col-md-6">
      <div class="card h-100 text-center shadow-sm border-0 rounded-4 p-4">
        <div class="mb-3">
          <img src="/images/task.png" alt="Easy Management" width="60">
        </div>
        <h5 class="fw-semibold">Easy Management</h5>
        <p class="text-muted">
          Manage bookings, set availability, and track everything from one simple dashboard.
        </p>
      </div>
    </div>

  </div>
</section>



<!-- Final CTA -->
<section class="text-center mb-5">
  <h2 class="fw-bold">Ready to start hosting?</h2>
  <a href="/listings/new" class="btn btn-danger btn-lg mt-3 rounded-5">Get Started</a>
</section>

<!-- Custom Styles -->
<style>
  .tools-img {
    max-width: 500px;
    width: 100%;
    height: auto;
    align-items: center;
  }

  .mobImg {
    margin-top: -60px;
    
  }

  .text-mob {
    margin-top: 3px;
  }
  
  /* Accordion custom */
