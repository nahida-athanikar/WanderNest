<% layout("/layouts/boilerplate") -%>
<div class="listing-page">
  <div class="form-container mt-3">
    <h2>Create a New Listing</h2>

    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      
      <div class="form-group">
        <label for="title">Title</label>
        <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="listing[description]" class="form-control" placeholder="Short description" required></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <div class="form-group">
        <label for="image">Upload Image</label>
        <input name="listing[image]" type="file" class="form-control" required>
      </div>

      <div class="row">
        <div class="form-group col-md-4">
          <label for="price">Price</label>
          <input name="listing[price]" type="number" class="form-control" placeholder="1200" required>
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>
        <div class="form-group col-md-8">
          <label for="country">Country</label>
          <input name="listing[country]" type="text" class="form-control" placeholder="India" required>
          <div class="invalid-feedback">Please enter a valid country</div>
        </div>
      </div>

      <div class="form-group">
        <label for="location">Location</label>
        <input name="listing[location]" type="text" class="form-control" placeholder="Jaipur, Kolhapur" required>
        <div class="invalid-feedback">Please enter a valid location</div>
      </div>

      <button type="submit" class="btn add-btn">Add Listing</button>
    </form>
  </div>
</div>
